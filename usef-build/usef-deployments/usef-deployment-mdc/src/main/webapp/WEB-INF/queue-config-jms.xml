<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<messaging-deployment xmlns="urn:jboss:messaging-deployment:1.0">
	<hornetq-server>
		<jms-destinations>
			<jms-queue name="IN_QUEUE_MDC">
				<entry name="java:jboss/exported/jms/usefInQueueMdc" />
				<durable>true</durable>
			</jms-queue>
			<jms-queue name="OUT_QUEUE_MDC">
				<entry name="java:jboss/exported/jms/usefOutQueueMdc" />
				<durable>true</durable>
			</jms-queue>
			<jms-queue name="NOT_SENT_QUEUE_MDC">
				<entry name="java:jboss/exported/jms/usefNotSentQueueMdc" />
				<durable>true</durable>
			</jms-queue>
		</jms-destinations>
	</hornetq-server>
</messaging-deployment>
